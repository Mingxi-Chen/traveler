{
    "name": "travel_agent",
    "version": "1.0.0",
    "description": "智能旅行规划助手 - 基于MCP协议的多步骤自动化系统",
    "main": "src/server/mcp-server.js",
    "type": "module",
    "scripts": {
        "start": "node src/server/mcp-server.js",
        "mcp-server": "node src/server/mcp-server.js",
        "dev": "concurrently \"npm run mcp-server\" \"npm run serve\"",
        "serve": "http-server ./src/client -p 3000 -o",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "jest --testMatch='**/*.unit.test.js'",
        "test:integration": "jest --testMatch='**/*.integration.test.js'",
        "test:e2e": "playwright test",
        "lint": "eslint src/**/*.js",
        "format": "prettier --write \"src/**/*.{js,json,html,css}\"",
        "build": "webpack --mode production",
        "docker:build": "docker build -t travel_agent .",
        "docker:run": "docker run -p 3001:3001 --env-file .env travel_agent"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "travel",
        "planner",
        "assistant",
        "automation",
        "api-integration"
    ],
    "author": "mingxi",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "axios": "^1.6.7",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "joi": "^17.12.0",
        "node-cache": "^5.1.2",
        "rate-limiter-flexible": "^5.0.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@playwright/test": "^1.41.0",
        "@types/node": "^20.11.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.1",
        "http-server": "^14.1.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.2.4",
        "supertest": "^6.3.4",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Mingxi-Chen/travel_agent.git"
    },
    "bugs": {
        "url": "https://github.com/Mingxi-Chen/travel_agent/ssues"
    },
    "homepage": "https://github.com/Mingxi-Chen/travel_agent#readme"
}
